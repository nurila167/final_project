<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".IntroMainFragment">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/circle_bottom_border"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/logo"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_wellcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/relative_layout"
        android:text="Wellcome"
        android:gravity="center"
        android:textFontWeight="800"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="31sp"/>

    <TextView
        android:id="@+id/tv_advertice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_wellcome"
        android:layout_margin="20dp"
        android:textFontWeight="300"
        android:textSize="15sp"
        android:gravity="center"
        android:text="When you order from Deli, you save your time, energy, and money."/>

    <Button
        android:id="@+id/buttonToRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Get Start"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:background="@drawable/circle_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_advertice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>